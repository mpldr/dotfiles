	name             = Moritz Poldrack
	email            = git@moritz.sh
[credential]
	helper           = cache --timeout=31557600
[pull]
	rebase           = true
[commit]
	gpgsign          = true
[init]
	defaultBranch    = master
	templatedir = /home/moritz/.git-templates
[merge]
	ff               = false
	directoryRenames = true
	tool             = vimdiff
	guitool          = smerge
[diff]
	renames          = true
[format]
	signoff          = true
[include]
	path             = .gitconfig.local

[includeIf "gitdir:Projects/Arbeit/"]
	path             = .gitconfig.work
[http]
	sslVerify = false
